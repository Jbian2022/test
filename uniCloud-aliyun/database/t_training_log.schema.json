{
	"bsonType": "object",
	"required": ["logId", "traineeNo"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"logId": {
			"title": "log_id",
			"description": "训练日志id,主键不重复",
			"bsonType": "string",
			"errorMessage": "{title}不能为空",
			"maxLength": 128
		},
		"traineeNo": {
			"title": "trainee_no",
			"description": "学员编号,关联trainee表的traineeNo字段",
			"bsonType": "string",
			"errorMessage": "{title}不能为空",
			"maxLength": 128
		},
		"trainDate": {
			"title": "train_date",
			"description": "学员训练时间，只包含年月日",
			"bsonType": "timestamp"
		},
		"trainContent": {
			"title": "train_content",
			"description": "训练内容,数组的每一个元素是一种训练内容",
			"bsonType": "array",
			"arrayType": "string"
		},
		"createdTime": {
			"title": "created_time",
			"description": "创建时间",
			"bsonType": "timestamp",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
